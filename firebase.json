{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/store/",
        "destination": "/books/",
        "type": 301
      },
      {
        "source": "/talks/",
        "destination": "/tags/talks/",
        "type": 302
      }
    ]
  }
}